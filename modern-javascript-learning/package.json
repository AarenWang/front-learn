{
  "name": "modern-javascript-learning",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "互动式现代 JavaScript 学习项目，涵盖 16 个课时的基础与实战路径",
  "keywords": [
    "javascript",
    "learning",
    "modern",
    "vite",
    "tailwind",
    "curriculum"
  ],
  "author": "AI Vibing Code",
  "license": "MIT",
  "homepage": ".",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
